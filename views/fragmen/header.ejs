<link rel="stylesheet" href="/css/styles.css"> 
<link rel="stylesheet" href="/css/header.css"> 

<header>
    <nav class="container">
        <div class="site-title">
            <h1><a href="/">Alquiler de Equipo deportivo</a></h1>
        </div>

        <button class="menu-toggle" aria-label="Abrir menú">☰</button>

        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/servicios">Servicios</a></li>
            <li><a href="/contacto">Contacto</a></li>

            <% if (isAuthenticated) { %>
                <li><a href="#">Hola, <%= username %>!</a></li>
                <% if (isAdmin) { %>
                    <li><a href="/register">Registrar Usuario</a></li>
                    <li><a href="/admin/contacts">Ver Contactos</a></li>
                    <li><a href="/admin/Pagos Registrados"> Ver Registro de Pagos</a></li>
                <% } %>
                <li><a href="/logout">Cerrar Sesión</a></li>
            <% } else { %>
                <li><a href="/login">Iniciar Sesión</a></li>
            <% } %>
        </ul>
    </nav>
</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const menuToggle = document.querySelector('.menu-toggle');
        const navUl = document.querySelector('nav ul');

        if (menuToggle && navUl) {
            menuToggle.addEventListener('click', () => {
                navUl.classList.toggle('active');
            });

            document.addEventListener('click', (event) => {
                if (!menuToggle.contains(event.target) && !navUl.contains(event.target) && navUl.classList.contains('active')) {
                    navUl.classList.remove('active');
                }
            });
        }
    });
</script>
