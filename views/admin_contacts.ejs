<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contactos Registrados</title>
    <link rel="stylesheet" href="/css/admin.css">
    
</head>
<body>
    <%- include('fragmen/header.ejs')%>
    <h1>Tabla de Contactos</h1>
        <section class="contacts-table-section">
            <div class="table-responsive">
                <table class="contacts-table">
                    <thead>
                        <tr id="encabezado">
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Comentario</th>
                            <th>IP</th>
                            <th>País</th> 
                            <th>Fecha y Hora</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (contacts && contacts.length > 0) { %>
                            <% contacts.forEach(contact => { %>
                        <tr>
                    <td><%= contact.id %></td>
                    <td><%= contact.name %></td>    
                    <td><%= contact.email %></td>                         
                    <td><%= contact.comment %></td> 
                    <td><%= contact.ip_address %></td>                
                    <td><%= contact.country %></td>    
                    <td><%= contact.created_at %></td>
                        </tr>
                            <% }); %>
                        <% } else { %>
                        <tr>
                        <td>No hay contactos registrados.</td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>

            </div> <p class="return-link-paragraph"><a href="/">Volver a la página principal</a></p>
        </section>
    <%- include('fragmen/footer.ejs')%>
</body>
</html>